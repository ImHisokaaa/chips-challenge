<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      alignment="CENTER"
      spacing="25"
      fx:controller="ccprog3.chipschallenge.MenuController"
      style="-fx-background-color: #222;">

    <padding>
        <Insets top="50" bottom="50" left="50" right="50"/>
    </padding>

    <Label text="Chip's Challenge"
           style="-fx-font-size: 32px; -fx-text-fill: white;"/>

    <Button fx:id="btnStart" text="Start Game"
            style="-fx-font-size: 20px; -fx-pref-width: 200px;"/>

    <Button fx:id="btnHelp" text="Help"
            style="-fx-font-size: 20px; -fx-pref-width: 200px;"/>

    <Button fx:id="btnExit" text="Exit"
            style="-fx-font-size: 20px; -fx-pref-width: 200px;"/>
</VBox>
